@model IEnumerable<MvcKoll.Models.AddressBookPost>

<div id="alterPost"></div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Added)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Changed)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Added)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Changed)
        </td>
        <td>
            @Ajax.ActionLink("Edit", "Edit", new { id = item.Id },
                new AjaxOptions
                {
                    HttpMethod = "GET",
                    UpdateTargetId = "createPost",
                    InsertionMode = InsertionMode.Replace
                }) |
            @Ajax.ActionLink("Delete", "Delete", new {id = item.Id},
                new AjaxOptions
                {
                    HttpMethod = "POST",
                    UpdateTargetId = "addressList",
                    InsertionMode = InsertionMode.Replace
                })
        </td>
    </tr>
}

</table>
